<% content_for :header_id, 'signup-page' %>

<section class="signup-body signup-bg">
  <div class="signup-card">
      
    <h2>Sign up and ask a trainer anything for $1</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <a class="facebook-button">
          <i class="fa fa-facebook-official"></i>
          <p>Signup with Facebook</p>
        </a>
  
        <pre>- or -</pre>
  
      <div class="field half-input">
        <%= f.label :first_name, class: "srt" %><br />
        <%= f.text_field :first_name, placeholder: :first_name%>
      </div>

      <div class="field half-input">
        <%= f.label :last_name, class: "srt" %><br />
        <%= f.text_field :last_name, placeholder: :last_name %>
      </div>

      <div class="field">
        <%= f.label :email, class: "srt" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: :email %>
      </div>

      <div class="field half-input">
        <%= f.label :password, class: "srt" %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
      </div>

      <div class="field half-input">
        <%= f.label :password_confirmation, class: "srt" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: :password_confirmation %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button button-big" %>
      </div>
    <% end %>

  </div>
</section>
