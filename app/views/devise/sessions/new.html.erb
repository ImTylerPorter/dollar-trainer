<% content_for :header_id, 'login-page' %>
<section class="signup-body login-bg">
  

  <div class="signup-card">
    
    <h2>Login and ask a trainer anything for $1</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
     <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "facebook-button"  do%>
              <i class="fa fa-facebook-official"></i>
              <p>Signup with Facebook</p>
            <% end %>
          <% end %>
        <% end -%>
      <pre>- or -</pre>

      <div class="field">
        <%= f.label :email, class: "srt" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: :email %>
      </div>

      <div class="field">
        <%= f.label :password, class: "srt" %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "remember-me" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button button-big" %>
      </div>
      <%= render "devise/shared/links" %>

    <% end %>

  </div>
</section>
